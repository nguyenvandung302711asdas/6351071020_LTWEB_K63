@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<h2 style="text-align:center">Đăng nhập</h2>

<h4 style="color:red; text-align:center;">@ViewBag.Thongbao</h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "text-align:center;" })

<table style="margin: 0 auto; border-spacing: 10px;">
    <tr>
        <td style="text-align:right; padding-right:10px;">
            Tên đăng nhập:
        </td>
        <td>
            @Html.TextBox("TenDN", null, new { @class = "form-control" })
            @if (ViewData["Loi1"] != null)
            {
                <span style="color:red;">@ViewData["Loi1"]</span>
            }
        </td>
    </tr>
    <tr>
        <td style="text-align:right; padding-right:10px;">
            Mật khẩu:
        </td>
        <td>
            @Html.Password("Matkhau", null, new { @class = "form-control" })
            @if (ViewData["Loi2"] != null)
            {
                <span style="color:red;">@ViewData["Loi2"]</span>
            }
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
        </td>
      
    </tr>
   
</table>
}
