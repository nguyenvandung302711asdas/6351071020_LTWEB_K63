
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<h2>Dangky</h2>

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loai1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loai2"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loai3"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Mật khẩu nhập lại:</td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loai4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>@Html.TextBox("Email") @ViewData["Loai5"]</td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loai7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loai6"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Ngày sinh :</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>